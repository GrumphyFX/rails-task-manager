<h1>My Tasks</h1>
<% @tasks.each do |task| %>
    <ul>
        <li>
            <%= link_to task.title, task_path(task) %>
            <%= link_to "", task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure want to delete this?" } %>
        </li>
    </ul>
<% end %>
<%= link_to "Create new task", new_path %>
